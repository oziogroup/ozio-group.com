---
interface Props {
  headline: string;
  intro: string;
  openPositions: string;
  noPositions: string;
  linkedinCta: string;
  linkedinUrl: string;
  spontaneous: {
    headline: string;
    description: string;
  };
  contactHref: string;
}

const { headline, intro, openPositions, noPositions, linkedinCta, linkedinUrl, spontaneous, contactHref } = Astro.props;
---

<section class="py-20 md:py-32">
  <div class="container mx-auto px-6">
    <div class="max-w-4xl mx-auto text-center mb-16" data-animate="fade-up">
      <h1 class="text-4xl md:text-6xl font-heading font-bold mb-6">
        {headline}
      </h1>
      <p class="text-xl md:text-2xl text-text-secondary">
        {intro}
      </p>
    </div>

    <div class="max-w-4xl mx-auto mb-16" data-animate="fade-up">
      <h2 class="text-2xl md:text-3xl font-heading font-bold mb-8 text-center">
        {openPositions}
      </h2>
      
      <div class="bg-surface border border-elevated rounded-2xl p-8 md:p-12 text-center">
        <div class="w-16 h-16 mx-auto mb-6 rounded-full bg-gradient-to-r from-accent/20 to-accent-hover/20 flex items-center justify-center">
          <svg class="w-8 h-8 text-accent" fill="currentColor" viewBox="0 0 24 24">
            <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
          </svg>
        </div>
        
        <p class="text-text-secondary mb-6">
          {noPositions}
        </p>
        
        <a 
          href={linkedinUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 bg-[#0A66C2] hover:bg-[#004182] text-white font-semibold px-6 py-3 rounded-lg transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
          </svg>
          {linkedinCta}
        </a>
      </div>
    </div>

    <div class="max-w-4xl mx-auto bg-gradient-to-r from-accent/10 to-accent-hover/10 border border-accent/30 rounded-2xl p-8 md:p-12" data-animate="fade-up">
      <div class="text-center">
        <h2 class="text-2xl md:text-3xl font-heading font-bold mb-4">
          {spontaneous.headline}
        </h2>
        <p class="text-text-secondary mb-8 max-w-2xl mx-auto">
          {spontaneous.description}
        </p>
        <a 
          href={contactHref}
          class="btn-primary group gap-2 px-8 py-4"
        >
          {spontaneous.headline}
          <svg class="w-5 h-5 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
