---
interface Props {
  headline: string;
  description: string;
  ctaText: string;
  ctaHref: string;
}

const { headline, description, ctaText, ctaHref } = Astro.props;
---

<section class="py-24 md:py-40 relative overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-b from-background via-surface to-background -z-10"></div>
  
  <div class="container mx-auto px-6">
    <div 
      class="max-w-4xl mx-auto text-center bg-gradient-to-r from-accent/10 via-accent/5 to-accent-hover/10 border border-accent/30 rounded-3xl p-12 md:p-16"
      data-animate="scale-up"
    >
      <h2 class="text-3xl md:text-5xl font-heading font-bold mb-6">
        {headline}
      </h2>
      <p class="text-xl text-text-secondary max-w-2xl mx-auto mb-10 leading-relaxed">
        {description}
      </p>
      <a href={ctaHref} class="btn-primary group gap-3 px-10 py-5 text-lg">
        {ctaText}
        <svg 
          class="w-5 h-5 transition-transform group-hover:translate-x-1" 
          fill="none" 
          stroke="currentColor" 
          viewBox="0 0 24 24"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>
