---
interface Story {
  title: string;
  subtitle?: string;
  content: string;
  highlight: string;
  stat?: string;
  statLabel?: string;
}

interface Props {
  headline: string;
  intro: string;
  stories: Story[];
  ctaText: string;
  ctaHref: string;
}

const { headline, intro, stories, ctaText, ctaHref } = Astro.props;
const displayStories = stories.slice(0, 2);
---

<section class="py-24 md:py-40 relative overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-b from-surface via-background to-surface -z-10"></div>
  
  <div class="container mx-auto px-6">
    <div class="text-center mb-16" data-animate="fade-up">
      <h2 class="text-3xl md:text-5xl font-heading font-bold mb-4">
        {headline}
      </h2>
      <p class="text-xl text-text-secondary max-w-2xl mx-auto">
        {intro}
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto mb-12" data-animate="stagger">
      {displayStories.map((story) => (
        <div class="bg-surface border border-elevated rounded-2xl p-8 hover:border-accent/50 transition-colors">
          <div class="flex items-start justify-between mb-4">
            <div>
              <h3 class="text-2xl font-heading font-bold text-accent">
                {story.title}
              </h3>
              {story.subtitle && (
                <p class="text-text-muted text-sm mt-1">{story.subtitle}</p>
              )}
            </div>
            {story.stat && (
              <div class="text-right">
                <span class="text-3xl font-heading font-bold text-accent">{story.stat}</span>
                {story.statLabel && (
                  <p class="text-text-muted text-xs">{story.statLabel}</p>
                )}
              </div>
            )}
          </div>
          <p class="text-text-secondary mb-6 leading-relaxed">
            {story.content}
          </p>
          <p class="text-white font-medium border-l-2 border-accent pl-4 italic">
            "{story.highlight}"
          </p>
        </div>
      ))}
    </div>

    <div class="text-center" data-animate="fade-up">
      <a href={ctaHref} class="btn-secondary px-8 py-4">
        {ctaText}
      </a>
    </div>
  </div>
</section>
