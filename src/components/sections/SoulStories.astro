---
interface Story {
  title: string;
  content: string;
  highlight: string;
}

interface Props {
  headline: string;
  intro: string;
  stories: Story[];
}

const { headline, intro, stories } = Astro.props;
---

<section class="py-20 md:py-32 bg-surface">
  <div class="container mx-auto px-6">
    <div class="max-w-4xl mx-auto text-center mb-16" data-animate="fade-up">
      <h2 class="text-3xl md:text-5xl font-heading font-bold mb-6">
        {headline}
      </h2>
      <p class="text-xl text-text-secondary">
        {intro}
      </p>
    </div>

    <div class="max-w-5xl mx-auto space-y-12">
      {stories.map((story, index) => (
        <article 
          class="relative bg-background border border-elevated rounded-2xl p-8 md:p-12 overflow-hidden"
          data-animate="fade-up"
        >
          <div class="absolute top-0 left-0 w-1 h-full bg-gradient-to-b from-accent to-accent-hover"></div>
          
          <h3 class="text-2xl md:text-3xl font-heading font-bold mb-6 bg-gradient-to-r from-accent to-accent-hover bg-clip-text text-transparent">
            {story.title}
          </h3>
          
          <p class="text-lg text-text-secondary leading-relaxed mb-8">
            {story.content}
          </p>
          
          <blockquote class="relative pl-6 border-l-2 border-accent/50">
            <p class="text-xl font-heading font-semibold text-text-primary italic">
              "{story.highlight}"
            </p>
          </blockquote>
        </article>
      ))}
    </div>
  </div>
</section>
