---
import '../styles/global.css';
import Navbar from '@components/layout/Navbar.astro';

interface Props {
  title: string;
  description: string;
  lang?: 'fr' | 'en';
  canonicalUrl?: string;
  ogImage?: string;
  schemaType?: 'website' | 'careers';
}

const { 
  title, 
  description, 
  lang = 'fr',
  canonicalUrl,
  ogImage = '/assets/logo_ozio.png',
  schemaType = 'website'
} = Astro.props;

const currentYear = new Date().getFullYear();
const currentPath = Astro.url.pathname;
const siteUrl = 'https://ozio-group.com';

const getAlternatePath = (path: string, targetLang: 'fr' | 'en'): string => {
  if (targetLang === 'fr') {
    return path
      .replace('/en/', '/fr/')
      .replace('/about', '/a-propos')
      .replace('/careers', '/carrieres')
      .replace('/thank-you', '/merci');
  } else {
    return path
      .replace('/fr/', '/en/')
      .replace('/a-propos', '/about')
      .replace('/carrieres', '/careers')
      .replace('/merci', '/thank-you');
  }
};

const frUrl = `${siteUrl}${getAlternatePath(currentPath, 'fr')}`;
const enUrl = `${siteUrl}${getAlternatePath(currentPath, 'en')}`;
const currentUrl = canonicalUrl || `${siteUrl}${currentPath}`;
const ogLocale = lang === 'fr' ? 'fr_FR' : 'en_US';

const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Ozio Group",
  "url": siteUrl,
  "logo": `${siteUrl}/assets/logo_ozio.png`,
  "sameAs": [
    "https://www.linkedin.com/company/ozio-group/"
  ],
  "description": lang === 'fr' 
    ? "Ozio Group - La marketplace européenne des services à domicile."
    : "Ozio Group - The European home services marketplace."
};
---

<!DOCTYPE html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <link rel="canonical" href={currentUrl} />
    
    <link rel="alternate" hreflang="fr" href={frUrl} />
    <link rel="alternate" hreflang="en" href={enUrl} />
    <link rel="alternate" hreflang="x-default" href={frUrl} />
    
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={`${siteUrl}${ogImage}`} />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content={ogLocale} />
    <meta property="og:site_name" content="Ozio Group" />
    
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={`${siteUrl}${ogImage}`} />
    
    <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
    
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link 
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap" 
      rel="stylesheet"
    />
  </head>
  <body class="bg-background text-text-primary font-body min-h-screen flex flex-col antialiased">
    <Navbar lang={lang} currentPath={currentPath} />

    <main class="flex-1">
      <slot />
    </main>

    <footer class="border-t border-elevated">
      <div class="container mx-auto px-4 py-12">
        <div class="flex flex-col items-center gap-6">
          <a href={`/${lang}/`} class="hover:opacity-80 transition-opacity">
            <img 
              src="/images/logo.png" 
              alt="Ozio Group" 
              class="h-10 w-auto"
            />
          </a>
          <p class="text-text-muted text-sm text-center">
            © 2016–{currentYear} Ozio Group. {lang === 'fr' ? 'Tous droits réservés.' : 'All rights reserved.'}
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>
