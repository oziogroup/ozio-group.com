---
import BaseLayout from '@layouts/BaseLayout.astro';
import Hero from '@components/sections/Hero.astro';
import StatCounter from '@components/sections/StatCounter.astro';
import MarketplaceExplainer from '@components/sections/MarketplaceExplainer.astro';
import SoulPreview from '@components/sections/SoulPreview.astro';
import CultureTeaser from '@components/sections/CultureTeaser.astro';
import JoinUsCTA from '@components/sections/JoinUsCTA.astro';
import en from '@content/en.json';

const { meta, hero, stats, marketplace, soul, culture, careers } = en;
---

<BaseLayout 
  title={meta.title} 
  description={meta.description} 
  lang="en"
  canonicalUrl="https://ozio-group.com/en/"
>
  <Hero 
    headline={hero.headline}
    subheadline={hero.subheadline}
    ctaText={hero.cta}
    ctaHref="/en/careers"
  />
  
  <StatCounter stats={stats} />
  
  <MarketplaceExplainer
    headline={marketplace.headline}
    description={marketplace.description}
    highlight={marketplace.highlight}
    ctaText={marketplace.cta}
    ctaHref="/en/about"
  />

  <SoulPreview
    headline={soul.headline}
    intro={soul.intro}
    stories={soul.stories}
    ctaText={soul.ctaText}
    ctaHref="/en/culture"
  />

  <CultureTeaser
    headline={culture.values.headline}
    intro={culture.intro}
    values={culture.values.items}
    ctaText={culture.ctaText}
    ctaHref="/en/culture"
  />

  <JoinUsCTA
    headline={careers.headline}
    description={careers.intro}
    ctaText={careers.ctaText}
    ctaHref="/en/careers"
  />
</BaseLayout>

<script>
  import { initAllAnimations } from '@lib/animations';
  
  document.addEventListener('astro:page-load', initAllAnimations);
  initAllAnimations();
</script>
