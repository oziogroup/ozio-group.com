---
import BaseLayout from '@layouts/BaseLayout.astro';
import en from '@content/en.json';

const { thankYou } = en;
---

<BaseLayout 
  title="Thank You | Ozio Group" 
  description="Thank you for your application. We will get back to you shortly."
  lang="en"
  canonicalUrl="https://ozio-group.com/en/thank-you"
>
  <section class="min-h-[70vh] flex items-center py-20">
    <div class="container mx-auto px-6">
      <div class="max-w-2xl mx-auto text-center" data-animate="fade-up">
        <div class="w-20 h-20 mx-auto mb-8 rounded-full bg-gradient-to-r from-green-500 to-emerald-500 flex items-center justify-center">
          <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" />
          </svg>
        </div>
        
        <h1 class="text-4xl md:text-5xl font-heading font-bold mb-6">
          {thankYou.headline}
        </h1>
        
        <p class="text-xl text-text-secondary mb-4">
          {thankYou.message}
        </p>
        
        <p class="text-text-muted mb-10">
          {thankYou.nextSteps}
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/en/" 
            class="inline-flex items-center justify-center gap-2 bg-gradient-to-r from-accent to-accent-hover hover:from-accent-hover hover:to-accent text-white font-semibold px-8 py-4 rounded-lg transition-all duration-300 min-h-[48px]"
          >
            {thankYou.backHome}
          </a>
          <a 
            href="/en/culture" 
            class="inline-flex items-center justify-center gap-2 border border-elevated hover:border-accent text-text-primary font-semibold px-8 py-4 rounded-lg transition-colors min-h-[48px]"
          >
            {thankYou.exploreCulture}
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  import { initScrollReveal } from '@lib/animations';
  
  document.addEventListener('astro:page-load', initScrollReveal);
  initScrollReveal();
</script>
